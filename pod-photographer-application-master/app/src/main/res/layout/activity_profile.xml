<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_bg_s">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_keyboard_backspace" />

        <LinearLayout
            android:layout_below="@id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:src="@drawable/ic_user">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ig_profile_image"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_60sdp"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_user"
                            app:civ_border_color="@android:color/white"
                            app:civ_border_width="@dimen/_2sdp" />

                        <ImageView
                            android:id="@+id/tm_cam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/ig_profile_image"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="@dimen/_17sdp"
                            android:src="@drawable/ic_add" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/relative"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_id_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:backgroundTint="@android:color/transparent"
                            android:fontFamily="@font/fontex"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ed_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:drawableRight="@drawable/ic_person"
                                android:fontFamily="@font/fontex"
                                android:hint="Full Name"
                                android:inputType="text"
                                android:maxLines="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ed_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:drawableRight="@drawable/ic_email"
                                android:fontFamily="@font/fontex"
                                android:hint="Email Id"
                                android:inputType="textEmailAddress"
                                android:maxLines="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ed_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:drawableRight="@drawable/ic_phone"
                                android:fontFamily="@font/fontex"
                                android:hint="Mobile no"
                                android:inputType="number"
                                android:maxLength="10"
                                android:maxLines="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ed_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:drawableRight="@drawable/ic_location"
                                android:fontFamily="@font/fontex"
                                android:hint="Address"
                                android:inputType="text"
                                android:maxLines="1" />

                        </LinearLayout>

                        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:padding="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            card_view:cardBackgroundColor="@color/sign_up_bg"
                            card_view:cardCornerRadius="@dimen/_20sdp"
                            card_view:cardElevation="@dimen/_2sdp">

                            <Button
                                android:id="@+id/bt_continue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:clickable="true"
                                android:fontFamily="@font/fontexbold"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:text="Submit"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>