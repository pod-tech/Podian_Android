<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bgs"
    android:orientation="vertical"
    tools:context=".Activity.Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginEnd="@dimen/_110sdp"
        android:padding="@dimen/_30sdp"
        android:src="@drawable/logo_pod_s" />

    <ScrollView
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/fontex"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Update Required"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:fontFamily="@font/fontex"
                    android:text="The current version of you Podian application is below or minimum support version. Please update your app."
                    android:textColor="@android:color/black" />


                <Button
                    android:id="@+id/bt_update_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_weight="9"
                    android:background="@drawable/corner_all_black"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="UPDATE APP"
                    android:textColor="@color/colorPrimary" />


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
